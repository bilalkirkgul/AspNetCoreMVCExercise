
@{
    ViewData["Title"] = "Index";
}

@model CategoryProductVM


<div class="container">
    <div class="card">
        <div class="card-header text-center">
            <h3>Ürünler</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-3">
                    <ul class="list-group">
                        @foreach (Category item in Model.Categories)
                        {
                            <li class="list-group-item"><a class="btn" asp-controller="Category" asp-action="Index" asp-route-id="@item.CategoryID">@item.CategoryName</a></li>
                        }
                    </ul>
                </div>
                <div class="col-lg-9">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Fiyat</th>
                                <th>Stok</th>
                                <th><a class="btn btn-success" asp-controller="Product" asp-action="Insert">Ürün Ekle</a></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product item in Model.Products)
                            {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.UnitPrice</td>
                                <td>@item.UnitsInStock</td>
                                <td><a asp-controller="Product" asp-action="Update" asp-route-id="@item.ProductID" class="btn btn-outline-warning">Güncelle</a></td>
                                <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-outline-danger">Sil</a></td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


