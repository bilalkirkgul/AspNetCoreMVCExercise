
@{
    ViewData["Title"] = "Update";
}

@model ProductVM

<div class="container col-lg-6 offset-3">
    <div class="card">
        <div class="card-header text-center">Update</div>
        <div class="card-body">
            <form asp-controller="Product" asp-action="Update" method="post" class="form-group">
                <div class="form-group">
                    <select asp-for="CategoryID" asp-items="@Model.Categories" class="form-control">
                        <option value="value">Lütfen bir kategori seçiniz</option> @*bu alan olduğu için id 0 geliyor bunu active hale getirirsek controllerden 0 gelen catıd yönetmemiz gerekiyor..*@
                    </select>
                </div>
                <div class="form-group">
                    @*<input asp-for="ProductID" style="display:none" />*@
                    <input asp-for="ProductID" type="hidden" />
                    <label asp-for="ProductName">Ürün Adı</label>
                    <input asp-for="ProductName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UnitPrice">Ürün Fiyatı</label>
                    <input asp-for="UnitPrice" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="UnitInStock">Ürün Stok</label>
                    <input asp-for="UnitInStock" class="form-control" />
                </div>
                <input type="submit" name="name" value="Kaydet" class="btn btn-outline-primary" />
            </form>
        </div>
        @if (ViewBag.IsSuccess != null)
        {
            <div class="card-footer">
                <span class="alert-info">@ViewBag.IsSuccess</span>
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-success">Listeye Geri Dön</a>
            </div>
        }
    </div>

</div>




