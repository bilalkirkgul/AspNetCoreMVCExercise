
@{
    ViewData["Title"] = "Index";
}

@model List<Product>


<div class="container">
    <div class="row">
        <div class="col-lg-3">
            @await Component.InvokeAsync("Category")
        </div>
        <div class="col-lg-9">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ProductName</th>
                        <th>UnitPrice</th>
                        <th>UnitInStock</th>


                    </tr>
                </thead>
                <tbody>
                    @foreach (Product item in Model)
                    {
                        <tr>
                            <td>@item.ProductId</td>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.UnitsInStock</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

