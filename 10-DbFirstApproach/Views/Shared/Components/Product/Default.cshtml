
@model List<Product>



@foreach (Product item in Model)
{
    <tr>
        <td>@item.ProductName</td>
        <td>@item.UnitPrice</td>
        <td>@item.UnitsInStock</td>
      
        <td><a asp-controller="Product" asp-action="Update" asp-route-id="@item.ProductId" class="btn btn-outline-warning">Güncelle</a></td>
        <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-outline-danger">Sil</a></td>

    </tr>
}